<odoo>

    <record id="view_rent_cost_center_tree" model="ir.ui.view">
        <field name="name">rent.cost.center.list</field>
        <field name="model">rent.cost.center</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="rental_object_id"/>
                <field name="area_size"/>
            </list>
        </field>
    </record>

    <record id="rent_cost_center_form" model="ir.ui.view">
        <field name="name">rent.cost.center.form ()</field>
        <field name="model">rent.cost.center</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <header>
                                        <button string="Open planned revenue"
                                            name="open_planned_monthly_revenue_list"
                                            type="object"
                                            class="oe_highlight" data-hotkey="q"
                                            display="always"/>
                                    </header>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="rental_object_id"/>
                            <field name="area_size"/>
                            <field name="planned_monthly_revenue_ids">
                                <list string="Planned monthly revenue" limit="7" default_order="date desc" editable="top">
                                    <field name="date"/>
                                    <field name="revenue"/>
                                </list>
                            </field>

                            <field name="actual_monthly_revenue_ids">
                                <list string="Planned monthly revenue" limit="7" default_order="date desc" editable="top">
                                    <field name="date"/>
                                    <field name="revenue"/>
                                </list>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rent_cost_center_window" model="ir.actions.act_window">
        <field name="name">Cost center</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rent.cost.center</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="rent_menu_cost_center"
              action="action_rent_cost_center_window"
              parent="rent_menu_configuration"
              name="Cost center" sequence="200"/>

</odoo>