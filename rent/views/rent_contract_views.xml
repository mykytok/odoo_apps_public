<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_rent_contract_list" model="ir.ui.view">
        <field name="name">rent.contract.list</field>
        <field name="model">rent.contract</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="rental_object_id"/>
                <field name="contract_type"/>
                <field name="number"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <record id="rent_contract_form" model="ir.ui.view">
        <field name="name">rent.contract.form ()</field>
        <field name="model">rent.contract</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col='1'>
                        <group>
                            <field name="name"/>
                            <field name="rental_object_id"/>
                            <field name="contract_type"/>
                        </group>
                        <group>
                            <group><field name="number"/></group>
                            <group><field name="date"/></group>
                        </group>
                        <group col='3' >
                            <group string="Rental">
                            <field name="rental_rate" string="rate"/>
                            <field name="rental_rate_currency_id" string="currency"/>
                            <field name="rental_rate_tax_id" string="tax"/>
                            </group>
                            <group string="Marketing">
                            <field name="marketing_rate" string="rate"/>
                            <field name="marketing_rate_currency_id" string="currency"/>
                            <field name="marketing_rate_tax_id" string="tax"/>
                            </group>
                            <group string="Exploitation">
                            <field name="exploitation_rate" string="rate"/>
                            <field name="exploitation_rate_currency_id" string="currency"/>
                            <field name="exploitation_rate_tax_id" string="tax"/>
                            </group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rent_contract_search" model="ir.ui.view">
        <field name="name">rent.contract.search (rent_contract)</field>
        <field name="model">rent.contract</field>
        <field name="arch" type="xml">
            <search string="Filters">
                <searchpanel>
                    <field name="rental_object_id" string="Rental object" hierarchize="0" select="one" order="name"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_rent_contract_window" model="ir.actions.act_window">
        <field name="name">Contract</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rent.contract</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="rent_menu_contract"
              action="action_rent_contract_window"
              parent="rent_menu_configuration"
              name="Contract" sequence="200"/>

</odoo>